{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
      "args": ["${relativeFile}"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "name": "Run pnpm Command",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm", // 指定运行时为 pnpm
      "args": ["option", "create", "test", "-t", "index"], // 传递命令行参数
      "cwd": "${workspaceRoot}", // 设置当前工作目录
      "console": "integratedTerminal", // 在集成终端中运行命令
      "protocol": "inspector"
    }
  ]
}
